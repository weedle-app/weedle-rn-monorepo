{
  "name": "@weedle-app/auth",
  "version": "0.2.0",
  "description": "Auth module part of the weedle SDK's for wallet and other login types",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "rn-core.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest --runInBand --forceExit --verbose",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "watch": "nodemon --watch src --exec yarn prepare",
    "clean": "npx rimraf lib",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/weedle-app/rn-core",
  "author": "Weedle <tech@joinweedle.com> (https://github.com/weedle-app)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weedle-app/rn-core/issues"
  },
  "homepage": "https://github.com/weedle-app/rn-core#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-async-storage/async-storage": "^1.17.7",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@testing-library/react-native": "^10.1.1",
    "@types/jest": "^28.1.4",
    "@types/react": "^16.9.19",
    "@types/react-native": "^0.67.8",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@walletconnect/react-native-dapp": "^1.7.8",
    "commitlint": "^11.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.28.0",
    "ethers": "^5.6.8",
    "husky": "^6.0.0",
    "jest": "28.1.2",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react-native-builder-bob": "^0.18.2",
    "react-native-typescript-transformer": "^1.2.13",
    "react-test-renderer": "17.0.2",
    "release-it": "^14.2.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "*",
    "@walletconnect/client": "*",
    "@walletconnect/react-native-dapp": "*",
    "@weedle-app/app": "*",
    "ethers": "*",
    "react": "*",
    "react-native": "*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "@typescript-eslint/no-unused-vars": 0,
      "strict": 1
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
